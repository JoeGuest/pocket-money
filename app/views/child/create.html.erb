<%= form_for :child, url: '/child/create' do |f| %>
<% if @child && @child.errors.any? %>
  <ul class="alert alert-danger">
  <% @child.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit class: 'btn btn-primary' %>
  </p>
<% end %>