<%= form_for :parent, url: '/login' do |f| %>
  <%= flash[:alert] %>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>
 
  <p>
    <%= f.submit :login %>
  </p>
<% end %>
<p>Don't have a login? <%= link_to 'Register here', '/register' %></p>