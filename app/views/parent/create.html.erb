<%= form_for :parent, url: '/parent' do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :confirm_password %><br>
    <%= f.password_field :confirm_password %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>